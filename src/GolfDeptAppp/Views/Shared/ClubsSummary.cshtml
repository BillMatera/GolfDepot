@model Club
<head>
    <script src="https://use.fontawesome.com/e1efa10af5.js"></script>
</head>

<style>
    .pic{
        height:200px;
        width:200px;
    }
    .thumbnail{
        -webkit-box-shadow: #5c5c5c 5px 5px 5px;
        -moz-box-shadow: #5c5c5c 5px 5px 5px; 
        box-shadow: #5c5c5c 5px 5px 5px;
        margin-top:10px;
        border:solid;
        border-width:1px;
    }
</style>


<div class="col-sm-4 col-lg-4 col-md-4 pull-left" style="height:475px">
    <div class="thumbnail" style="background-color:transparent url(@Model.ImageThumbnailUrl)">
        <img src="@Model.ImageThumbnailUrl" alt="" style="height:200px;width:200px;"/>
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Club" asp-action="Details" asp-route-clubId="@Model.ClubId">@Model.Name</a>
            </h3>
            @if (@Model.CategoryId == 1)
            {
                <h4>Driver</h4>
            }
            else if (@Model.CategoryId == 2)
            {
                <h4>Putter</h4>
            }
            <h3>
            @if (Model.IsPreferredClub.Equals(true))
            {
                <i class="fa fa-star" aria-hidden="true" style="color:gold"></i>
            }
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" 
                   asp-controller="ShoppingCart" 
                   asp-action="AddToShoppingCart" 
                   asp-route-clubId="@Model.ClubId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>