@model ShoppingCartViewModel

<head>
    <script src="https://use.fontawesome.com/e1efa10af5.js"></script>
</head>


@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
    
        <li style="color:#f7f5e6">
            <a asp-controller="ShoppingCart" asp-action="Index">
                <span class="fa fa-fw fa-shopping-cart fa-2x"></span>
                <span id="cart-status">
                    @Model.ShoppingCart.ShoppingCartItems.Count
                </span>
            </a>
        </li>
  
        }
