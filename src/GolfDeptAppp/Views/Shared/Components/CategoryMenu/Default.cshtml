
<li class="dropdown" style="color:#f7f5e6">
    <a asp-controller="Club"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown" >Clubs<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Club" asp-action="List"
                   asp-route-categoryId="@category.CategoryId">@category.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Club" asp-action="List" asp-route-categoryId="0">View all clubs</a>
        </li>
    </ul>
</li>